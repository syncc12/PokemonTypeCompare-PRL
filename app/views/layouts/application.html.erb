<!DOCTYPE html>
<html>
  <head>
    <title>Pokemon Compare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">

      <div class="row">
        <div id="static-header" class="col-12">
          Pokemon Compare
        </div>
      </div>

      <div class="row">
        <div id="static-sidebar" class="col-1">
          <br />
          <%= link_to 'Home', root_path, class: 'link-sidebar' %><br />
          <%= link_to 'Type Comparer', type_compares_path, class: 'link-sidebar' %><br />
        </div>

        <div id="content" class="col-11">
          <%= yield %>
        </div>
      </div>

    </div>

    
  </body>
</html>
